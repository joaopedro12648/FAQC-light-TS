{
  "name": "FAQC-light-TS",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "check:pre-common": "tsx vibecoding/scripts/qualities/pre-common-auto-check.ts",
    "typecheck": "tsc --noEmit --incremental --tsBuildInfoFile tmp/tsbuildinfo.json -p qualities/tsconfig/tsconfig/types/tsconfig.json",
    "lint": "node -e \"console.log('ESLint is running with --max-warnings=0');\" && eslint . --config qualities/eslint/eslint.config.mjs --max-warnings=0 --cache --cache-location node_modules/.cache/eslint",
    "test": "vitest run --config tests/vitest.config.cjs",
    "preflight": "tsx scripts/qualities/preflight.ts",
    "check": "tsx scripts/qualities/check.ts",
    "check:fast": "tsx scripts/qualities/check.ts --fast",
    "verify:policy": "node qualities/policy/anti_mvp/core/run.mjs && node qualities/policy/no_relaxation/core/run.mjs",
    "context:manifest": "tsx vibecoding/scripts/qualities/context-hash-manifest.ts"
  },
  "author": "cozyupk",
  "license": "MIT",
  "engines": {
    "node": ">=18"
  },
  "devDependencies": {
    "@eslint/js": "9.38.0",
    "@types/node": "^24.9.1",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "dependency-cruiser": "^16.0.0",
    "eslint": "9.38.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsdoc": "48.2.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "iconv-lite": "^0.7.0",
    "tsx": "^4.15.7",
    "typescript": "^5.9.3",
    "vite": "^5.4.10",
    "vitest": "1.6.0"
  },
  "overrides": {
    "eslint": "9.38.0",
    "@eslint/js": "9.38.0"
  }
}
