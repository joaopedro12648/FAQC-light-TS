{
  "extends": "./qualities/tsconfig/tsconfig/types/tsconfig.json",
  "compilerOptions": {
    "types": ["node", "vitest/globals"],
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.mts",
    "src/**/*.cts",
    "vibecoding/tests/**/*.ts",
    "vibecoding/tests/**/*.mts",
    "vibecoding/tests/**/*.cts"
  ],
  "exclude": ["node_modules", "dist", "build", "coverage", "auto-check"]
}


